<h1>User info</h1>

  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
    <% if @user == current_user %>
      <p><%= link_to "edit", edit_user_path(@user) %></p>
    <% end %>
  </div>



<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>