<%= render 'books/user', user: @user, book: @book%>



<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td></td>
      <td>
        <%= link_to  book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>