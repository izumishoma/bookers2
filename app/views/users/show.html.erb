<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5">
      <%= render 'books/user', user: @user, book: @book%>
    </div>

    <div class="col-md-7">
      <h1>Books</h1>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td>
              <%= link_to  book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>