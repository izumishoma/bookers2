<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <%= link_to  user_path(current_user.id) do %><li class = "nav-link text-white"><i class="fas fa-home"></i> Home </li><% end %>
                <%= link_to  users_path do %><li class = "nav-link text-white"><i class="fas fa-users"></i> Users </li><% end %>
                <%= link_to  books_path do %><li class = "nav-link text-white"><i class="fas fa-book-open"></i> Books </li><% end %>
                <%= link_to  destroy_user_session_path, method: :delete do %><li class = "nav-link text-white"><i class="fas fa-sign-out-alt"></i> Log out </li><% end %>
              <% else %>
                <%= link_to  '/' do %><li class = "nav-link text-white"><i class="fas fa-home"></i> Home </li><% end %>
                <%= link_to  about_path do %><li class = "nav-link text-white"><i class="fas fa-link"></i> About </li><% end %>
                <%= link_to  new_user_registration_path do %><li class = "nav-link text-white"><i class="fas fa-user-plus"></i> Sign up </li><% end %>
                <%= link_to  new_user_session_path do %><li class = "nav-link text-white"><i class="fas fa-sign-in-alt"></i> Log in </li><% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    
    <footer>
      <div class="d-flex justify-content-center">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
