<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5">
      <%= render 'user', user: @user, book: @book%>
    </div>

    <div class="col-md-7">
      <h1>Book detail</h1>
      <table>
        <tr>
          <td><%= image_tag @book_id.user.get_profile_image(100,100) %></p></td>
          <td>
            <%= link_to  book_path(@book_id.id) do %>
              <%= @book_id.title %>
            <% end %>
          </td>
          <td><%= @book_id.body %></td>
        <% if @user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book_id.id) %></td>
          <td><%= link_to "Destroy", book_path(@book_id.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
        <% end %>
        </tr>
      </table>

      <spen><%= link_to "Show", user_path(@user.id) %></spen>
    </div>
  </div>
</div>
