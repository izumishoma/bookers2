<h1>User info</h1>

  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </table>
      <p><%= link_to "edit", edit_user_path(user) %></p>
  </div>
  
  
  <h2>New book</h2>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>